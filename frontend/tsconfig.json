{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./src",
    "paths": {
      "~/*": ["./*"]
    },

    /* Advanced Options */
    "esModuleInterop": true, // Разрешает использование import/export с CommonJS модулями
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true, // Проверка на согласование имен файлов
    "noImplicitReturns": true, // Все ветки функции должны иметь return или throw
    "noImplicitAny": true, // Запрещает неявный any
    "strictPropertyInitialization": true, // Строгая проверка инициализации свойств классов
    "strictNullChecks": true, // Строгая проверка на null и undefined
    "strictBindCallApply": true, // Строгая проверка методов bind, call и apply
    "noUnusedLocals": true, // Предупреждение о неиспользуемых локальных переменных
    "noUnusedParameters": true // Предупреждение о неиспользуемых параметрах
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
